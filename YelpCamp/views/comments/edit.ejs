<%include ../partials/header.ejs%>
<h1>Comments Edit Route</h1>
<div class = "container">
    <div class = "row">
        <h1 style = "text-align: center">Edit Comment</h1>
        <div style="width: 50%; margin: 20px auto;">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method = "POST">
                <div class = "form-group">
                    <input class = "form-control" type="text" name="comment[text]" placeholder="Comment" value="<%= comment.text %>">
                </div>
                <div class = "form-group">
                    <button class = "btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground_id %>">Go Back</a>
        </div> <!--css style-->
    </div> <!--row-->
</div> <!--container-->
<%include ../partials/footer.ejs%>