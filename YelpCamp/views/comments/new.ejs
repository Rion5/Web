<%include ../partials/header.ejs%>
<div class = "container">
    <div class = "row">
        <h1 style = "text-align: center">Add a New Comment to <%= campground.name %></h1>
        <div style="width: 50%; margin: 20px auto;">
            <form action="/campgrounds/<%= campground._id %>/comments" method = "POST">
                <div class = "form-group">
                    <input class = "form-control" type="text" name="comment[text]" placeholder="Comment">
                </div>
                <div class = "form-group">
                    <input class = "form-control" type="text" name="comment[author]" placeholder="Author">
                </div>
                <div class = "form-group">
                    <button class = "btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div> <!--css style-->
    </div> <!--row-->
</div> <!--container-->
<%include ../partials/footer.ejs%>